@page "/listrecipes"

@using Models
@inject Data.Services.ReceiptService _receiptService

<h1>Suas Receitas</h1>

<p>Visualize aqui suas receitas</p>

@if (receipts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var receipt in receipts)
            {
                <tr>
                    <td><a href="/recipe/@receipt.Id">@receipt.Id</a></td>
                    <td>@receipt.Name</td>
                    <td>@receipt.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private List<Receipt> receipts = new List<Receipt>();

    protected override async Task OnInitializedAsync()
    {
        receipts = await _receiptService.ListAll();
    }
}
